USE ACCOUNT ac_master;
USE DATAFEED df_ZBRA;

ALGORITHM al_Buy_Something(DATAFEED quotes, CURRENCY #buy_price)
{
    SET  { buy_price = quotes.NEXT.PRC }
    IF:
    {
         quotes.NEXT.SEC IS EQTY(ZBRA)
         AND
         quotes.NEXT.PRC < 90.00
    }
}

